    width: 20%;
    height: 2px;
}

.collection_details span {
font-size: 10px;
}

.collection_details:has(p) {
font-size: 14px;
font-family: 'Lato';
letter-spacing: 1px;
font-weight: 300;
}

p.image_text.align--center {
font-size: 16px;
font-weight: 300;
}
}
  @media (max-width: 768px) {
  h2.collections_main_title {
    padding: 0 !important;
    margin-top: 0 !important;
  }

  .section-header.section-header--small {
    margin-top: 0 !important;
    padding-top: 0 !important;
  }
}
  .collection__grid-image-wrapper {
  position: relative;
  width: 100%;
  padding-top: 125%; /* Adjust this if you want more or less height */
  overflow: hidden;
}
.collection__grid-image-wrapper > div {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
  @media (min-width: 769px) {
  .collection__grid-image-wrapper {
    position: relative;
    width: 100%;
    padding-top: 125%;
    overflow: hidden;
  }

  .collection__grid-image-wrapper > div {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
}

@media (max-width: 768px) {
  .collection__grid-image-wrapper,
  .collection__grid-image-wrapper > div {
    position: relative;
    padding-top: unset;
    height: auto;
  }

  img.lazyautosizes,
  img.lazyloaded {
    height: auto !important;
    max-height: 300px;
    object-fit: cover;
  }
}
  .grid__item.text-center {
  margin-bottom: 30px;
}
@media (min-width: 769px) {
  .collection__grid-image-wrapper:hover img {
    transform: scale(1.05);
    transition: transform 0.3s ease;
  }

  .collection_details span:hover {
    background-color: #ff6600;
    color: #fff;
    transition: background-color 0.3s ease;
  }
}
.collection_details span {
  margin: 10px auto 0;
  display: inline-block;
  padding: 8px 20px;
  font-size: 13px;
  font-weight: 500;
  border-radius: 30px;
  transition: all 0.3s ease;
}
</style>
<script>
  $('.collection_list_slider').slick({
      slidesToShow: 3.5,
    slidesToScroll: 1,
      arrows: true,
      dots: true,
    infinite: false,
        responsive: [
      {
        breakpoint: 767,
        settings: {
          slidesToShow: 2,
        }
        },
        {
          breakpoint: 600,
          settings: {
            slidesToShow: 1.5,
            slidesToScroll: 1,
          }
      }
    ]
  });
</script>

