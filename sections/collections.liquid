    width: 30%;
    height: 4px;
    background: #000000;
    margin: 0;
}

.collections_lists .slick-dots .slick-active {
    opacity: 1;
        background: #ff6600;

}
.collections_lists .slick-dots {
      bottom: unset;
      padding-bottom: 30px;

}
