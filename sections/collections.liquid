    display: block;
    width: fit-content;
    padding: 6px 12px;
}

.grid-uniform.collection_list_slider {
    margin: 0 !important;
    padding: 0 0 50px 0;
}

.collections_lists .slick-dots {
bottom: -10px !important;
}
      
