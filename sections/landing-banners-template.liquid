<style>
  .btn.banner-btn {
    line-height: normal;
    height: max-content;
    min-height: max-content;
    margin: 0 auto;
    width: max-content;
    display: block;
    position: absolute;
    bottom: 3%;
    left: 50%;
    transform: translate(-50%, 0px);
    padding: 7px 40px;
}
  .banner_content_block {
    position: absolute;
    top: 5%;
    left: 50%;
    transform: translate(-50%, 0%);
    font-weight: bold;
    width:100%;
}
  .custom_image_block {
    position: relative;
}
  .image_sub_title_head, .image_title_head
  {
        text-transform: uppercase;
        font-weight: bold;
  }
/*   .btn.banner-btn:hover {
    background-color: #000 !important;
    border-color: #000 !important;
} */
