<div class="block banner_block landing_page_banners"> 
<div class="banner-section-outer grid">   
{% for block in section.blocks %}
        {% case block.settings.width %}
          {% when '25%' %}
            {%- assign block_width = 'col-xs-12 col-md-3' -%}
          {% when '33%' %}
            {%- assign block_width = 'col-xs-12 col-md-4' -%}
      	  {% when '41%' %}
            {%- assign block_width = 'col-xs-12 col-md-5' -%}
          {% when '50%' %}
            {%- assign block_width = 'col-xs-12 col-md-6' -%}
      	  {% when '58%' %}
            {%- assign block_width = 'col-xs-12 col-md-7' -%}
          {% when '66%' %}
            {%- assign block_width = 'col-xs-12 col-md-8' -%}
          {% when '75%' %}
            {%- assign block_width = 'col-xs-12 col-md-9' -%}
          {% when '100%' %}
            {%- assign block_width = 'col-xs-12 col-md-12' -%}
        {% endcase %}
<div class="banner-section grid__item  custom__item--{{ block.id }} small--one-whole {{ block_width }} {% if block.settings.alignment %}align--{{ block.settings.alignment }}{% endif %}" {{ block.shopify_attributes }}>
  <div class="custom__item-inner custom__item-inner--{{ block.type }}">
      {% case block.type %}
              {% when 'image' %}
    {% if block.settings.image != blank %}
    <div class="custom_image_block">
      {% if block.settings.image_url != blank %}  <a href="{{ block.settings.image_url }}">{% endif %}
      <div class="custom__block-image-container image-{{ forloop.index }}">
        {% assign img_url = block.settings.image | img_url: 'master' | replace: '_original.', '_{width}x.' %}

        <img class="custom__block-image lazyload"
             data-src="{{ img_url }}"
             data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
             data-aspectratio="{{ block.settings.image.aspect_ratio }}"
             data-sizes="auto"
             alt="{{ block.settings.image.alt | escape }}" sizes="auto">                    
        <noscript>
          <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt | escape }}" class="custom__block-image">
        </noscript>

      </div>
      {% if block.settings.image_title != blank or block.settings.image_sub_title != blank  or block.settings.image_short_desc != blank or block.settings.button_title != blank  %}
      <div class="banner_content_block">
        {% if block.settings.image_title != blank %} <h2 style="color:{{ block.settings.text_color}};" class="image_title_head {% if block.settings.alignment %}align--{{ block.settings.alignment }}{% endif %}">{{  block.settings.image_title }}</h2>{% endif %}
        {% if block.settings.image_sub_title != blank %} <h4 style="color:{{ block.settings.text_color}};" class="image_sub_title_head {% if block.settings.alignment %}align--{{ block.settings.alignment }}{% endif %}">{{  block.settings.image_sub_title }}</h4>{% endif %}
        {% if block.settings.image_short_desc != blank %} <p style="color:{{ block.settings.text_color}};" class="image_text {% if block.settings.alignment %}align--{{ block.settings.alignment }}{% endif %}">{{  block.settings.image_short_desc }}</p>{% endif %}       
      </div>
       {% if block.settings.button_title != blank %} <a style="border:1px solid {{ block.settings.button_bg }}; background-color:{{ block.settings.button_bg }}; color:{{ block.settings.button_color}};" class="{% if block.settings.alignment %}align--{{ block.settings.alignment }}{% endif %} btn banner-btn" href="{{ block.settings.button_link}}">{{  block.settings.button_title }}</a>{% endif %}
      {% endif %}
        {% if block.settings.image_url != blank %}  </a>{% endif %}     
      </div>

    {% else %}
    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
     {% endcase %}
  </div>
</div>
  {% endfor %}
</div>
