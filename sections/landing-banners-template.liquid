  {
    padding-right:20px;
  }
  .custom__block-image-container {
    margin-bottom: 40px;
}
  @media(max-width:768px)
  {
    
    .block.banner_block
    {
          padding-right: 0px;
    }
  }
  @media (max-width:480px)
    {
      .banner_content_block
      {
        top:0;
      }
