    "label":"Caption"
    },
    {
    "type": "textarea",
    "id": "main_heading",
    "label":"Heading"
    },  
    {
    "type": "textarea",
    "id": "detail",
    "label":"Sub Heading"
    },
    {
    "type":"text",
    "id":"button_text",
    "label":"Button Label"
    },
