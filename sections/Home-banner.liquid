<style>
  
  .banner-image .desktop{
    display: none; 
  }
  
  .home_banner .slick-dots{
    bottom: 4px;
    background: #0000;
  }
  
  .home_banner .banner-track.slick-slider{
    margin-bottom: 0 !important; 
  }
  
  
  .home_banner .slick-dots li button:before{
   	background-color: #ff5100; 
    font-size: 0;
    opacity: 0.6;
    width: 12px;
    height: 12px;
  }
  
  .home_banner img{
    display: block; 
  }
  
  .home_banner .slick-dots li button[aria-selected="true"]:before{
    opacity: 1; 
  }
  
  
  .new_home_banner{
    margin-top: 0 !important;
  } 
  
  .home_banner .slick-slide>div {
    margin: 0;
    line-height: 0;
  }
  
  .home_banner .banner-image a:focus {
    outline:  none ;
  }
  
  .home_banner .slick-dots li{
    margin: 0 2px; 
  }
  
  
  @media screen and (min-width: 768px) {
    
    .banner-image .mobile {
      display: none; 
    }
    
    .banner-image .desktop{
      display: block; 
    }
  }
  
  
</style>

{% if section.blocks.size > 1 %}
<script>
  $('.home_banner .banner-track').slick({
      infinite: {{ section.settings.carousel }},
      speed: 300,
      slidesToShow: 1,
      autoplay: {{ section.settings.autoplay }},
      autoplaySpeed: {{ section.settings.autoplay_speed }},
      arrows: true,
      dots: {{ section.settings.show_dots }},
      adaptiveHeight: {{ section.settings.adapt_height }},
  });
</script>
{% endif %}