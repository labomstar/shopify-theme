<div class="banner banner-{{ section.id }} home_banner">
  
  <div class="banner-track">
    {% for block in section.blocks %}
    <div class="banner-image desktop_baner">
      <a href="{%if block.settings.link != blank %}{{block.settings.link}}{%endif%}">
        <picture>
  <source srcset="{{ block.settings.image | img_url: '1400x600' | replace: '.jpg', '.webp' }}" type="image/webp">
  <img
    {% if section.settings.main_banner and forloop.first %} fetchpriority="high" {% endif %}
    class="desktop"
    src="{{ block.settings.image | img_url: '1400x600' }}"
    width="1400"
    height="600"
    loading="eager"
    alt="{{ block.settings.main_heading | escape }}"
  >
</picture>

        <div class="content-area {% if block.settings.text_layout == 'left'%}content_left {% elsif block.settings.text_layout == 'center'%}content_center{% elsif block.settings.text_layout == 'right' %}content_right{% endif %}">
         {% if block.settings.main_heading != blank or block.settings.detail != blank or block.settings.sub_heading != blank or block.settings.button_text != blank %}
          <div class="moon-area">
          {% if block.settings.sub_heading != blank %}<p class="sub_heading caption"><span class="moon_Area_banner"><span class="colors sub_caption">{{block.settings.sub_heading}}</span></span> </p>{% endif %}
            {% if block.settings.main_heading != blank %}<h3 class="main_heading">{{block.settings.main_heading}}</h3>{% endif %}
           {% if block.settings.detail != blank %}<p class="sub_detail">{{block.settings.detail}}</p>{% endif %}
                        {%- comment -%}
            {% if block.settings.button_text != blank %}
              <a class="banner-button" href="{%if block.settings.btnurl != blank %}{{block.settings.btnurl}}{%else%}collections/modena{%endif%}">{{  block.settings.button_text }}</a>
            {% endif %}
            {%- endcomment -%}
          </div>
         {% endif %}
        </div>
      </a>
    </div>
     <div class="banner-image mobile_banner">
      <a href="{%if block.settings.link != blank %}{{block.settings.link}}{%endif%}">
         <div class="content-area-mob">
         {% if block.settings.main_heading != blank or block.settings.detail != blank or block.settings.sub_heading != blank or block.settings.button_text != blank %}
          <div class="moon-area">
          {% if block.settings.sub_heading != blank %}<p class="sub_heading caption"><span class="moon_Area_banner"><span class="colors sub_caption">{{block.settings.sub_heading}}</span></span> </p>{% endif %}
            {% if block.settings.main_heading != blank %}<h3 class="main_heading">{{block.settings.main_heading}}</h3>{% endif %}
           {% if block.settings.detail != blank %}<p class="sub_detail">{{block.settings.detail}}</p>{% endif %}
            {%- comment -%}
            {% if block.settings.button_text != blank %}
              <a class="banner-button" href="{%if block.settings.btnurl != blank %}{{block.settings.btnurl}}{%else%}collections/modena{%endif%}">{{  block.settings.button_text }}</a>
            {% endif %}
           {%- endcomment -%}
          </div>
         {% endif %}
        </div>
      <div class="image_mobile_banner">
              <img {% if section.settings.main_banner and forloop.first %} fetchpriority="high" {% endif %} class="mobile" src="{%if block.settings.Mobile_image != blank %}{{block.settings.Mobile_image | img_url:'master'}}{%endif%}">
      </div>
      </a>
    </div>
    {% endfor %}
  </div>

</div>
<style>
  span.moon_Area_banner {
    text-transform: uppercase;
    letter-spacing: 6px;
    font-weight: 300;
}
  .caption {
        margin-bottom: unset !important;

  }
  p.sub_detail {
    font-size: 23px;
    text-transform: uppercase;
    letter-spacing: 3px;
    color: #fff;
    margin-bottom: 20px;
}
  a.banner-button {
    color: #ff6b00;
    border: 1px solid;
    padding: 10px 20px;
    border-radius: 20px;
}
  .mobile_banner{
    display:none;
  }
  .index-section {
    padding-top: unset !important;

}
   @media(max-width:768px)
  {
    
  .content-area-mob {
    background: #000;
}
  
    .mobile_banner{
    display:block;
  }
    .desktop_baner{
    display:none;
  }
  .content-area-mob {
    padding-bottom: 35px;
    padding-top: 35px;
}
.banner-image img {
    padding-bottom: 30px;
}
.home_banner .main_heading {
    font-size: 25px;
    letter-spacing: 6px;
}
  }
   /* @media(max-width:768px)
  {
    .home_banner .main_heading {
   font-size: 20px !important;
    letter-spacing: 4px !important;
}
  } */

    @media(max-width: 450px){
.moon-area a {
    display: block;
    margin: 0 auto;
}
    
.sub_detail {
    font-size: 21px !important;
    margin: 0 !important;
}
    
.home_banner .main_heading {
    font-size: 26px;
    margin: 10px 0;
}
    
.banner-button {
    margin-top: 50px;
    }

.banner-button {
    margin: 50px auto 0 !important;
}

.image_mobile_banner img {
    height: 350px;
    object-fit: cover;
    object-position: bottom;
}

.moon-area .banner-button {
    color: #fff;
}
  }
</style>
{% schema %}
{
