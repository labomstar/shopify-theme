<script>

$( document ).ready(function() {
         $('.location-USA').css('display', 'block');
         $('.location-UK').css('display', 'none');
         $('.location-China').css('display', 'none');
});



 $('#waranty-request-form input').on('change', function() {
   var location = $('input[name=location]:checked', '#waranty-request-form').val(); 
      if (location == 'USA') 
       {
         $('.location-USA').css('display', 'block');
         $('.location-UK').css('display', 'none');
         $('.location-China').css('display', 'none');
       }
      else if (location == 'UK') 
      {
         $('.location-UK').css('display', 'block');
         $('.location-USA').css('display', 'none');
         $('.location-China').css('display', 'none');
      } 
      else 
      {
         $('.location-China').css('display', 'block');
         $('.location-USA').css('display', 'none');
         $('.location-UK').css('display', 'none');
      }



});
</script>  
