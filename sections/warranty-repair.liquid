{% if section.blocks.size > 0%}
{% for block in section.blocks %}
<div class="inner-block">
  {% if block.settings.title %}
  <h4 class="head--block warranty-repair-head">{{ block.settings.title }}</h4>
    {% endif %}
    {% if block.settings.return_desc %}
