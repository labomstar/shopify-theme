<style>
  .btn.banner-btn {
  margin: 20px auto 0;
  display: inline-block;
  line-height: normal;
  padding: 0.75em 2em;
  border-radius: 999px;
}
 .banner_content_block {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  text-align: center;
  padding: 30px 20px 40px; /* spacing from bottom */
  width: 100%;
  z-index: 10;
  box-sizing: border-box;
}

  .custom_image_block {
    position: relative;
        height: 100%;
  }
  .custom_image_block a:has(.custom__block-image-container){
    display: flex !important;
    height: 100% !important;
  }
  .image_sub_title_head,
  .image_title_head {
    text-transform: uppercase;
    font-weight: 300;
    font-size: 25px;
    line-height: 35px;
    margin-bottom: 20px;
  }
  /*   .btn.banner-btn:hover {
    background-color: #000 !important;
    border-color: #000 !important;
} */
  .block.banner_block {
    padding-right: 20px;
    display: flex;
  }
  .custom_block {
    padding: 40px 0 !important;
  }
  .custom_item {
    padding: 0;
    display: flex;
    justify-content: center;
    height: 100%;
  }

  .custom__block-image-container {
    overflow: hidden;
  }

  img.custom__block-image {
    transform: scale(1.3);
    object-fit: cover;
    display: block;
    height: 100% !important;
  }
  .banner-button {
    z-index: 10;
    border: 2px solid #ff6b00 !important;
  }
  .banner-image-shadow {
    z-index: 8;
    height: 400px;
    width: 100%;
    bottom: -0.25rem;
    position: absolute;
    overflow: hidden;
    background: linear-gradient(
      0deg,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0.45281862745098034) 67%,
      rgba(0, 0, 0, 0) 97%
    );
  }

  @media (max-width: 768px) {
    .custom_item {
      padding: 0 50px !important;
    }
    .custom__item-inner {
      position: unset !important;
    }
    .custom_image_block {
      position: unset !important;
    }
    img.custom__block-image {
      padding: 80px !important;
    }
    .banner-section-outer.custom_outer_section.grid {
      margin: unset !important;
    }
    .banner_content_block {
      position: unset !important;
      top: unset !important;
      left: unset !important;
      transform: unset !important;
    }
    img.custom__block-image {
      background-image: unset !important;
    }
    .banner-image-shadow {
      display: none;
    }
    .two_banner_block {
      background: #000;
    }
    .btn.banner-btn {
      position: unset !important;
      bottom: unset !important;
      left: unset !important;
      transform: unset !important;
    }
    .banner-button {
      width: 100%;
      max-width: 200px;
    }
    h2.image_title_head {
      font-size: 36px;
      line-height: 50px;
    }
    p.image_text.align--center {
      font-size: 24px;
      line-height: 35px;
    }
  }
  @media (max-width: 480px) {
    .banner_content_block {
      top: 0;
    }
    .image_sub_title_head {
      font-size: 14px;
    }
    img.custom__block-image {
      padding: unset !important;
    }
    h2.image_title_head {
      font-size: 28px !important;
      line-height: 35px !important;
      letter-spacing: 5px;
    }
    p.image_text.align--center {
      font-size: 17px !important;
      line-height: 25px !important;
    }
    img.custom__block-image {
      transform: scale(1.5);
      width: 100%;
      height: 100%;
      text-align: center;
    }

    .custom_item {
      padding: 0 20px !important;
    }

    .banner-button {
      margin: 30px auto 0 !important;
    }

    .banner-section:first-child {
      margin-bottom: 50px;
    }

    .custom_image_block {
      margin-bottom: 30px;
    }

    .custom__block-image-container {
      margin-bottom: 40px !important;
    }

