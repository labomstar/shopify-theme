  <body>
    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
           <div id="progress-bar-widget" class="progress-bar-widget
            {% if checkout.item_count > 0 %} display-block {% endif %}" data-threshold="35000">
           {% assign temp = checkout.total_price | times: 100 %}
           {% assign progress_percent = temp | divided_by: 35000 %}
           {% if progress_percent > 100 %}
             {% assign progress_percent = 100 %}
           {% endif %}
           <div id="progress-bar" class="cart-drawer__progress-bar" >
             <div class="progress" style="width: {{- progress_percent -}}%"> </div>
           </div>
           <p class="progress_info">
              {% if checkout.total_price >= 35000 %} 
              You've earned a <b>3 watch travel case</b> for free, use Code: <b>FREETRAVEL</b>
              {% else %}
              You are <b class="progress_price">{{ 35000 | minus: checkout.total_price | money }}</b> away from getting the 3 watch travel case for free!
              {% endif %}
           </p>
         </div>
          <div class="cart_shipping_bar">
                <i class="fa fa-check" aria-hidden="true"></i> 
            <span>You've earned free shipping!</span>
          </div>
          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </aside>
      </div>
    </div>

    {{ tracking_code }}
  </body>
